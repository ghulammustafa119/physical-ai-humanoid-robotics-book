# App settings
APP_NAME=Advanced RAG Chatbot API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# API settings
API_V1_PREFIX=/api/v1
ALLOWED_ORIGINS=*

# Database settings
DATABASE_URL=postgresql://username:password@localhost/dbname

# Qdrant settings
QDRANT_URL=https://your-cluster-url.qdrant.tech:6333
QDRANT_API_KEY=your_qdrant_api_key
QDRANT_COLLECTION_NAME=book_content

# Cohere settings (REQUIRED - Get free API key at https://cohere.com/)
COHERE_API_KEY=your_cohere_api_key
COHERE_MODEL=command-r-08-2024

# Google Gemini settings (OPTIONAL)
GOOGLE_APPLICATION_CREDENTIALS=credentials/google-sa.json
GEMINI_MODEL=gemini-2.5-flash

# OpenAI settings (OPTIONAL)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo

# RAG settings
RAG_MAX_TOKENS=2000
RAG_TEMPERATURE=0.7
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# Performance settings
RESPONSE_TIMEOUT=30
MAX_QUERY_LENGTH=1000
MAX_SELECTION_LENGTH=5000